@model WeddingStore.Models.Account

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top: 128px">
    <div class="col-md-6 mx-auto card">
        <div class="text-center">
            <a href="#">
                <img src="~/img/logo.png" alt="" width="100" height="100">
            </a>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationMessage("LoginError");
                <div class="form-group">
                    <label>Nazwa użytkownika:</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nazwa użytkownika" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group">
                    <label>Hasło:</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Hasło" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <input type="submit" value="Zaloguj się" class="btn btn-secondary form-control" style="margin-top: 15px" />
                </div>
            }
        </div>
    </div>
</div>
